@(Layout = null)
@using Resources
<!DOCTYPE html>
<html>
<head>
    <title>@Resource.Error | @Resource.AppName</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/custom")
</head>
<body>
    <div class="container">
        <header class="row">
            <div id="brand" class="col-12 col-lg-7">
                <a href="/" class="navbar-brand">
                    <img src="~/Images/logo.jpg" alt="Logo" id="logo" class="d-none d-sm-inline">
                    <span id="brand_name">@Resource.AppName</span>
                </a>
            </div>
            <div id="horizontal_menu" class="col-12 col-lg-5 row">
                <a href="#" class="col-7">@Resource.Account</a>
                <a href="#" class="col-5">@Resource.LogOut</a>
            </div>
        </header>
    </div>
    <hr>
    <div class="container">
        <div class="row">
            <div class="col-md-3 d-md-block d-none">
                <img src="~/Images/error_icon.png" alt="Error" style="width: 100%; height: auto" />
            </div>
            <div class="col-md-6">
                <h2>@ViewBag.ErrorMessage</h2>
                <h2>
                    <a href="/home/index">
                        @Resource.BackToHomepage
                    </a>
                </h2>
            </div>
        </div>
    </div>
    <hr>
    <div class="container">
        <footer>
            <p>&#169; @Resource.DevelopeByHelloVanDuc</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
</body>

</html>